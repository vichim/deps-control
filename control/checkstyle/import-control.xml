<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
    "-//Puppy Crawl//DTD Import Control 1.3//EN"
    "http://checkstyle.sourceforge.net/dtds/import_control_1_3.dtd">

<import-control pkg="ro.vichim.depscontrol.bookstore">
	<subpackage name="domain">
		<allow pkg=".*" regex="true"/>
		<disallow pkg="ro.vichim.depscontrol.bookstore.service"/>
		<disallow pkg="ro.vichim.depscontrol.bookstore.infrastructure"/>
	</subpackage>
	<subpackage name="service">
		<allow pkg=".*" regex="true"/>
		<disallow pkg="ro.vichim.depscontrol.bookstore.infrastructure"/>
	</subpackage>
	<subpackage name="infrastructure">
		<allow pkg=".*" regex="true"/>
	</subpackage>
</import-control>